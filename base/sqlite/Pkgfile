description="Library that implements a self-contained, serverless, zero-configuration, transactional SQL database engine"
url="http://www.sqlite.org/"

packager="Yaolinux Team"
maintainer="rems"

_amalgamationver=3360000

name=sqlite
version=3.36.0

source=(http://www.sqlite.org/2021/sqlite-autoconf-${_amalgamationver}.tar.gz)

build() {
cd $name-autoconf-${_amalgamationver}

./configure --prefix=/usr \
            --disable-static \
            --enable-fts5    \
            CFLAGS="-g -O2 \
            -DSQLITE_ENABLE_FTS3=1 \
            -DSQLITE_ENABLE_FTS4=1 \
            -DSQLITE_ENABLE_COLUMN_METADATA=1     \
            -DSQLITE_ENABLE_UNLOCK_NOTIFY=1       \
            -DSQLITE_SECURE_DELETE=1              \
            -DSQLITE_ENABLE_DBSTAT_VTAB=1         \
            -DSQLITE_ENABLE_FTS3_TOKENIZER=1"

make -j1
make DESTDIR=$PKG install

install -v -m755 -d $PKG/usr/share/doc/$name-$version
}
