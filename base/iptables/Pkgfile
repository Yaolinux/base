makedepends=(libmnl libnftnl)

description="The principal firewall tool for Linux."
url="http://www.iptables.org/"

packager="Yaolinux Team"

name=iptables
version=1.8.7

yaolinux_version=1.0-RC4

source=(http://www.netfilter.org/projects/iptables/files/$name-$version.tar.bz2
        http://yaolinux.mesfichiers.eu/yaolinux/files/yaolinux-${yaolinux_version}.tar.xz)

build() {
cd $name-$version

./configure --prefix=/usr \
            --sbindir=/sbin \
            --with-xtlibdir=/lib/xtables \
            --with-pkgconfigdir=/usr/lib/pkgconfig \
            --enable-libipq \
            --enable-devel

make
make DESTDIR=$PKG install

ln -sfv ../../sbin/xtables-multi $PKG/usr/bin/iptables-xml
for file in ip4tc ip6tc ipq xtables
 do
   mv -v $PKG/usr/lib/lib${file}.so.* $PKG/lib
   ln -sfv ../../lib/$(readlink $PKG/usr/lib/lib${file}.so) $PKG/usr/lib/lib${file}.so
 done

# service
cd ../yaolinux-${yaolinux_version}
make DESTDIR=$PKG install-$name
}
