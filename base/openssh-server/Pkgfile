description="Free version of the SSH connectivity tools - Server"
url="http://www.openssh.org/"

packager="Yaolinux Team"
maintainer="rems"

run=(openssh)

name=openssh-server
version=8.8p1
yaolinux_version=1.0-RC4

source=(https://yaolinux.fabienwang.fr/yaolinux/files/yaolinux-${yaolinux_version}.tar.xz)

build() {
cd yaolinux-${yaolinux_version}

make DESTDIR=$PKG install-sshd
}
