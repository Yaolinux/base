description="Free version of the SSH connectivity tools - Server"
url="http://www.openssh.org/"

packager="Yaolinux Team"
maintainer="rems"

makedepends=(openssh)

name=openssh-server
version=8.7p1
yaolinux_version=1.0-RC3

source=(http://dania.on86.net/yaolinux/files/yaolinux-${yaolinux_version}.tar.xz)

build() {
cd yaolinux-${yaolinux_version}

make DESTDIR=$PKG install-sshd
}
