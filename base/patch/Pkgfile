description="The GNU patch tool"
url="http://www.gnu.org/software/patch/patch.html"

packager="Yaolinux Team"
maintainer="rems"

name=patch
version=2.7.6

source=(http://ftp.gnu.org/gnu/patch/patch-$version.tar.xz)

build() {
cd patch-$version

./configure --prefix=/usr

make
make prefix=$PKG/usr install
}
