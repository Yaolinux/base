description="Synchronizing files over a network by sending just the differences in the files."
url="http://samba.anu.edu.au/rsync/"

packager="Grat-OS Team"
maintainer="rems"

makedepends=(rsync)
run=(rsync)

name=rsync-server
version=3.2.3
release=3
grat-os_version=1.0-RC1

source=(https://repo.grat-os.fr/files/grat-os-${grat-os_version}.tar.xz)

build() {
  cd grat-os-${grat-os_version}

  make DESTDIR=$PKG install-rsyncd
}
