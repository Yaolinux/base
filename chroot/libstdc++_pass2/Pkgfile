version=11.2.0
source=(http://ftp.gnu.org/gnu/gcc/gcc-$version/gcc-$version.tar.xz)

build() {

cd gcc-$version

ln -s gthr-posix.h libgcc/gthr-default.h

mkdir -pv ../build && cd ../build

../gcc-$version/libstdc++-v3/configure           \
    --host=$LFS_TARGET              \
    --prefix=/tools                 \
    --disable-multilib              \
    --disable-nls                   \
    --disable-libstdcxx-pch

make
make install
}
